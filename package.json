{
	"name": "rapidoride-backend-backend",
	"module": "src/app.ts",
	"type": "module",
	"scripts": {
		"dev": "bun --watch run src/app.ts",
		"clean": "rm -rf dist && echo 'Done.'",
		"build-modules": "bun run ./build-modules.ts",
		"build-app": "bun build ./src/app.ts --outdir ./dist --target bun --splitting",
		"app-build": "bun run build-modules && bun run build-app",
		"start": "bun run dist/app.js",
		"pm2-start": "tsc && pm2 start src/app.ts --name rapidoride-backend",
		"pm2-reload": "pm2 reload rapidoride-backend  --update-env",
		"pm2-stop": "pm2 stop rapidoride-backend && pm2 delete rapidoride-backend",
		"pm2-restart": "pm2 restart rapidoride-backend  --update-env"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/crypto-js": "^4.2.2",
		"@types/json2csv": "^5.0.7",
		"@types/mapbox__polyline": "^1.0.5",
		"@types/nodemailer": "^6.4.17"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@bogeychan/elysia-logger": "^0.1.4",
		"@elysiajs/cors": "^1.1.1",
		"@elysiajs/cron": "^1.3.0",
		"@elysiajs/jwt": "^1.1.1",
		"@elysiajs/swagger": "^1.2.0",
		"@mapbox/polyline": "^1.2.1",
		"@tqman/nice-logger": "^1.1.1",
		"@turf/turf": "^7.2.0",
		"@types/html-pdf": "^3.0.3",
		"@types/uuid": "^10.0.0",
		"agora-token": "^2.0.4",
		"aws-sdk": "^2.1692.0",
		"axios": "^1.12.2",
		"bcryptjs": "^3.0.2",
		"bunnycdn-storage": "^1.1.0",
		"crypto-js": "^4.2.0",
		"elysia": "^1.1.25",
		"elysia-ip": "^1.0.7",
		"elysiajs-sentry": "^1.3.2",
		"firebase-admin": "^11.11.0",
		"geolib": "^3.3.4",
		"html-pdf": "^3.0.1",
		"json2csv": "^6.0.0-alpha.2",
